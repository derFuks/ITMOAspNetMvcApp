@model ITMOAspNetMvcApp.Models.Attendance

@{
    ViewData["Title"] = "Редактировать запись посещаемости";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AttendanceId" />
    
    <div class="form-group">
        <label asp-for="StudentId"></label>
        <input asp-for="StudentId" class="form-control" />
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LessonId"></label>
        <input asp-for="LessonId" class="form-control" />
        <span asp-validation-for="LessonId" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="WasPresent" class="form-check-input" type="checkbox" />
        <label asp-for="WasPresent" class="form-check-label"></label>
        <span asp-validation-for="WasPresent" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
