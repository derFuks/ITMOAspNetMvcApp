@model ITMOAspNetMvcApp.Models.Attendance

@{
    ViewData["Title"] = "Детали записи посещаемости";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Студент</dt>
        <dd class="col-sm-10">
            @if (Model.Student != null)
            {
                @($"{Model.Student.LastName} {Model.Student.FirstName}")
            }
            else
            {
                @Model.StudentId
            }
        </dd>
        <dt class="col-sm-2">Занятие</dt>
        <dd class="col-sm-10">
            @if (Model.Lesson != null)
            {
                @Model.Lesson.LessonDate.ToLongDateString()
            }
            else
            {
                @Model.LessonId
            }
        </dd>
        <dt class="col-sm-2">Присутствовал</dt>
        <dd class="col-sm-10">
            @(Model.WasPresent ? "Да" : "Нет")
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.AttendanceId" class="btn btn-primary">Редактировать</a>
    <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
</div>
