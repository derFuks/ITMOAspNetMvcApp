@model ITMOAspNetMvcApp.Models.Attendance

@{
    ViewData["Title"] = "Удалить запись посещаемости";
}

<h2>@ViewData["Title"]</h2>

<h3>Вы уверены, что хотите удалить эту запись?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Студент</dt>
        <dd class="col-sm-10">
            @if (Model.Student != null)
            {
                @($"{Model.Student.LastName} {Model.Student.FirstName}")
            }
            else
            {
                @Model.StudentId
            }
        </dd>
        <dt class="col-sm-2">Занятие</dt>
        <dd class="col-sm-10">
            @if (Model.Lesson != null)
            {
                @Model.Lesson.LessonDate.ToShortDateString()
            }
            else
            {
                @Model.LessonId
            }
        </dd>
        <dt class="col-sm-2">Присутствовал</dt>
        <dd class="col-sm-10">
            @(Model.WasPresent ? "Да" : "Нет")
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AttendanceId" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
