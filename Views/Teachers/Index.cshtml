@model IEnumerable<ITMOAspNetMvcApp.Models.Teacher>

@{
    ViewData["Title"] = "Список преподавателей";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var teacher in Model)
    {
        <tr>
            <td>@teacher.LastName</td>
            <td>@teacher.FirstName</td>
            <td>@teacher.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-primary">Редактировать</a>
                <a asp-action="Details" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-info">Детали</a>
                <a asp-action="Delete" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Создать нового преподавателя</a>
