@model ITMOAspNetMvcApp.Models.Lesson

@{
    ViewData["Title"] = "Редактировать занятие";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="LessonId" />
    <div class="form-group">
        <label asp-for="LessonDate"></label>
        <input asp-for="LessonDate" class="form-control" type="date" />
        <span asp-validation-for="LessonDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisciplineId"></label>
        <input asp-for="DisciplineId" class="form-control" />
        <span asp-validation-for="DisciplineId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
