@model ITMOAspNetMvcApp.Models.Student
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@{
    ViewData["Title"] = "Создать студента";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalAttendanceScore"></label>
        <input asp-for="TotalAttendanceScore" class="form-control" />
        <span asp-validation-for="TotalAttendanceScore" class="text-danger"></span>
    </div>
        <div class="form-group"></div>
        <label asp-for="ExamScore"></label>
        <input asp-for="ExamScore" class="form-control" />
        <span asp-validation-for="ExamScore" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
@Html.ValidationMessageFor(model => model.TotalAttendanceScore, "", new { @class = "text-danger" })
@Html.ValidationMessageFor(model => model.ExamScore, "", new { @class = "text-danger" })
